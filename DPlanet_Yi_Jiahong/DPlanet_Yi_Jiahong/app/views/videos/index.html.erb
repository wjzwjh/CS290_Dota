<%= stylesheet_link_tag "product" %>
<h1>Listing videos</h1>
<table>
  <% @videos.each do |video| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(video.image_url, class: 'list_image') %>
              </td>
              <td class="list_description">
                <dl>
                  <dt><%= video.title %></dt>
                  <dd><%= truncate(strip_tags(video.description),
                                   length: 80) %></dd>
                </dl>
              </td>
              <td class="list_actions">
                <%= link_to 'Show', video %><br/>
                <%= link_to 'Edit', edit_video_path(video) %><br/>
                <%= link_to 'Destroy', video,
                            confirm: 'Are you sure?',
                    method: :delete %>
              </td>
              </tr>
          <% end %>
          </table>
          <br />
          <%= link_to 'New video', new_video_path %>
