<%= javascript_include_tag "jquery-1.4.1.min" %>
<% title "Galleries" %>
<style>
  #galleries_name{
     background-color: lightgray;
     color: #1a6493
  }
  #new_gallery_name{
     background-color: lightgray;
     color: red;
  }
  .gallery {
      width: 400px;
      float:left;
  }
  .image_size {
      width: 300px;
      height: 200px;
  }
</style>



<% for gallery in @galleries %>
    <div class="gallery">
      <h2><%= link_to gallery.name, gallery,:id =>"galleries_name" %></h2>
      <%= link_to (image_tag gallery.photos[0].image_url(:thumb), :class => "image_size"), gallery if gallery.photos.size != 0 %>
      Photos: <%= gallery.photos.size %>
    </div>
<% end %>
<div style="clear:both"></div>
<p><%= link_to "New Gallery", new_gallery_path,:id =>"new_gallery_name" %></p>

<script type="text/javascript">
    $('#new_gallery_name').bind("click",function(){
        if($('#notSignIn').is(':visible')){
            alert("You need to login first for create new gallery")
            $('#new_gallery_name').attr("href","#" )
        }
    });
</script>